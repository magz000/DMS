<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_photo"
        android:orientation="vertical"
        android:padding="4dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="NICE SAMPLE"
            android:textColor="@color/darkGray"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_marginTop="4dp"
            android:text="200kb"
            android:textColor="@color/lightGray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_marginTop="4dp"
            android:text="10/20/16"
            android:textColor="@color/lightGray"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_edittext_selector"
            android:gravity="top"
            android:hint="DESCRIPTION"
            android:textColorHint="@color/lightGray"
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_edittext_selector"
            android:hint="TAGS (Separate by commas)"
            android:textColorHint="@color/lightGray"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#e7e7e7" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_file_text_o"
        android:padding="1dip"
        android:scaleType="centerCrop" />
</RelativeLayout>